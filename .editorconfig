root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4

[*.{js,ts,tsx,jsx,json,css,html}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.ps1]
end_of_line = crlf

[Dockerfile*]
end_of_line = lf

[*.sh]
end_of_line = lf
